{
  "family": "tokenization-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::273204284763:role/tokenization-ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::273204284763:role/tokenization-ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "tokenization-backend",
      "image": "273204284763.dkr.ecr.us-east-1.amazonaws.com/tokenization-app:latest",
      "portMappings": [
        {
          "containerPort": 3010,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3010"
        },
        {
          "name": "DB_HOST",
          "value": "tokenization-database.cpvsc3suhxxo.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "tokendb"
        },
        {
          "name": "DB_USER",
          "value": "tokenuser"
        },
        {
          "name": "DB_PASSWORD",
          "value": "PLACEHOLDER_DB_PASSWORD"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/tokenization-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3010/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}